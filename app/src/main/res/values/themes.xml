<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidCourseLesson" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#15423D</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Theme.AndroidCourseLesson.Switch</item>

    </style>

    <style name="Theme.AndroidCourseLesson.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:colorBackground">@color/teal_700</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.AndroidCourseLesson.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">#0DE8D0</item>
    </style>

    <style name="Theme.AndroidCourseLesson.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#0DE8D0</item>
    </style>
</resources>